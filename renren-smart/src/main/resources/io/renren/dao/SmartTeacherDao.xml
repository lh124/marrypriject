<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.dao.smart.SmartTeacherDao">

	<!-- 可根据自己需要-->
	<sql id="allColumnsAlias">
		id as id ,name as name ,nickname as nickname ,sex as sex ,password as password ,open_id as openId ,school_id as schoolId ,pic as pic ,createTime as createtime 		
	</sql>
	<!-- 可根据自己需要-->
	<sql id="allColumns">
		id ,name ,nickname ,sex ,password ,open_id ,school_id ,pic ,createTime 		
	</sql>
	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.entity.smart.SmartTeacherEntity" id="smartTeacherMap">
		        <result property="id" column="id"/>
		        <result property="name" column="name"/>
		        <result property="nickname" column="nickname"/>
		        <result property="sex" column="sex"/>
		        <result property="password" column="password"/>
		        <result property="openId" column="open_id"/>
		        <result property="schoolId" column="school_id"/>
		        <result property="pic" column="pic"/>
		        <result property="createtime" column="createTime"/>
	    </resultMap>

	<select id="queryObject" resultType="io.renren.entity.smart.SmartTeacherEntity">
		select <include refid="allColumns"></include> from smart_teacher where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.entity.smart.SmartTeacherEntity">
		select <include refid="allColumns"></include> from smart_teacher where school_id=#{schoolId}
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from smart_teacher 
	</select>
	 
	<insert id="save" parameterType="io.renren.entity.smart.SmartTeacherEntity" useGeneratedKeys="true" keyProperty="id">
		insert into smart_teacher
		(
			`name`, 
			`nickname`, 
			`sex`, 
			`password`, 
			`open_id`, 
			`school_id`, 
			`pic`, 
			`createTime`
		)
		values
		(
			#{name}, 
			#{nickname}, 
			#{sex}, 
			#{password}, 
			#{openId}, 
			#{schoolId}, 
			#{pic}, 
			#{createtime}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.entity.smart.SmartTeacherEntity">
		update smart_teacher 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="nickname != null">`nickname` = #{nickname}, </if>
			<if test="sex != null">`sex` = #{sex}, </if>
			<if test="password != null">`password` = #{password}, </if>
			<if test="openId != null">`open_id` = #{openId}, </if>
			<if test="schoolId != null">`school_id` = #{schoolId}, </if>
			<if test="pic != null">`pic` = #{pic}, </if>
			<if test="createtime != null">`createTime` = #{createtime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from smart_teacher where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from smart_teacher where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>